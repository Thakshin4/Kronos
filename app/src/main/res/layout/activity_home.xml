<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/nav_reports_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:text="WEekly Reports"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_timesheet_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Home"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nav_category_reports_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="80dp"
        android:text="View Categories"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nav_timesheet_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:text="Create Timesheet Entry"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_timesheet_reports_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nav_category_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:text="Create Category"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_category_reports_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nav_timer_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:text="Timer"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_category_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nav_timesheet_reports_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:text="View Timesheet"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>